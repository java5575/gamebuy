    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>gamebuy.gb.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ImageCheckServlet</servlet-name>
        <servlet-class>gamebuy.gb.view.ImageCheckServlet</servlet-class>
        <init-param>
            <param-name>len</param-name>
            <param-value>4</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>ImageCheckServlet</servlet-name>
        <url-pattern>/images/check.jpg</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>registerImageCheckServlet</servlet-name>
        <servlet-class>gamebuy.gb.view.ImageCheckServlet</servlet-class>
        <init-param>
            <param-name>len</param-name>
            <param-value>7</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>registerImageCheckServlet</servlet-name>
        <url-pattern>/images/registercheck.jpg</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>logoutServlet</servlet-name>
        <servlet-class>gamebuy.gb.controller.logoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logoutServlet</servlet-name>
        <url-pattern>/logout.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RegistServlet</servlet-name>
        <servlet-class>gamebuy.gb.controller.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistServlet</servlet-name>
        <url-pattern>/register.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
